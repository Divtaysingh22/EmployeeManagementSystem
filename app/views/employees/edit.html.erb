
<%=form_for @employee do |f|%>
	<label>name</label>
	<%=f.text_field :name%>
	<br>
	<label>last name</label>
	<%=f.text_field :last_name%>
	<br>
	<label>Age</label>
	<%=f.text_field :age%>
	<br>
	<label>Department</label>
	<%=f.select :department_id, Department.all.pluck(:department_name, :id)%>
	<br>
	<%=f.submit "Create Employee"%>
<% end -%>
