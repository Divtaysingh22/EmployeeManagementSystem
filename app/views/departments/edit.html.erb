

<%=form_for @departments do |f|%>

	<label>Department Name</label>
	<%=f.text_field :department_name%>
	<br>
	<label>Department Type</label>
	<%= f.select :department_type, ['Sales', 'Marketing', 'Financial','IT','Logistics','Production','Security'], prompt:"select"%>

	<br><br>
    <label>Member Strength</label>
	<%=f.text_field :member_strength%>
	<br>

	<label>Description</label>
	<%=f.text_area :description%>
	<br>	
	
	<%=f.submit "Create Department"%>
<% end -%>


